- content_for :title do
  = [t('nested.dir._nested_file.admin'), t('nested.dir._nested_file.accounts'), t('nested.dir._nested_file.new')].compact.join(' - ')
.row
  .col-md-12
    %ul.breadcrumb
      %li
        = link_to root_url(subdomain: t('nested.dir._nested_file.admin')) do
          %i.fa.fa-fw.fa-home
          %span.text= t('nested.dir._nested_file.home')
      %li
        = link_to admin_accounts_path do
          %i.fa.fa-fw.fa-globe
          %span.text= t('nested.dir._nested_file.new_accounts')
      %li.active=t('Create Account')
    %fieldset
      = f.input :blah, label: t('nested.dir._nested_file.blah'), hint: t('nested.dir._nested_file.blabbloo')

/ main
.content
  .main-header
    %h2= t('nested.dir._nested_file.create_account')
  / main-content
  .main-content
    .row
      .col-md-12
        = render t('nested.dir._nested_file.form')

%span.text= t('nested.dir._nested_file.job_jobid_jobqueue', :jobid => (@job.id), :jobqueue => (@job.queue))

%p
  %label{ for: 'fieldName' }= t('nested.dir._nested_file.name')
  %br
  %input#fieldName{ name: 'cm-name', type: 'text' }

%label{ for: 'fieldyhiddl' }= t('nested.dir._nested_file.phone_number')

= link_to t('nested.dir._nested_file.sign_up_for_energylink'), signup_path, class: 'btn btn-lg btn-success'

%span.identifier= t('nested.dir._nested_file.userusername_useremail', :userusername => (user.username), :useremail => (user.email))
